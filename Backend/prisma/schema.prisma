generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  brand       String?
  color       String?
  size        String?
  images      String // JSON array stored as text
  tags        String? // Comma-separated tags
  stock       Int      @default(0)
  popularity  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   Int
  user        User     @relation(fields: [createdBy], references: [id])

  @@index([category])
  @@index([brand])
  @@index([price])
  @@index([createdAt])
}
